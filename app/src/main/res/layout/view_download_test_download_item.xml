<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/id_item_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_60">

        <TextView
            android:id="@+id/id_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/bg_grey"
            android:minHeight="@dimen/dimen_30"
            android:paddingRight="@dimen/dimen_10"
            android:paddingEnd="@dimen/dimen_10"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingStart="@dimen/dimen_10"
            android:textSize="@dimen/dimen_12" />

        <TextView
            android:id="@+id/id_local_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dimen_30"
            android:paddingRight="@dimen/dimen_10"
            android:paddingEnd="@dimen/dimen_10"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingStart="@dimen/dimen_10"
            android:layout_below="@+id/id_url"
            android:textSize="@dimen/dimen_12" />

        <TextView
            android:id="@+id/start_stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen_4"
            android:paddingStart="@dimen/dimen_4"
            android:paddingRight="@dimen/dimen_4"
            android:paddingEnd="@dimen/dimen_4"
            android:background="@color/color_accent"
            android:gravity="center"
            android:text="Start"
            android:textSize="@dimen/dimen_12" />
    </RelativeLayout>
    <View
        android:id="@+id/split_top"
        android:layout_below="@+id/id_item_region"
        android:background="@color/bg_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/info_bar"
        android:layout_below="@id/split_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/total_size"
            android:layout_weight="1"
            android:textSize="@dimen/dimen_12"
            android:padding="@dimen/dimen_4"
            android:textColor="@color/bg_grey"
            android:gravity="left|center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/downloaded_size"
            android:layout_weight="1"
            android:textSize="11dp"
            android:padding="@dimen/dimen_4"
            android:textColor="@color/bg_grey"
            android:gravity="left|center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/status_tv"
            android:layout_weight="1"
            android:textSize="@dimen/dimen_12"
            android:padding="@dimen/dimen_4"
            android:textColor="@color/bg_grey"
            android:gravity="left|center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_below="@+id/info_bar"
        android:background="@color/bg_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>